<p style="color: green"><%= notice %></p>

<%= render @contact %>

<div class="btn-group my-5">
  <%= link_to "Edit this contact", edit_contact_path(@contact), class: "btn btn-sm btn-outline-dark" %>
  <%= link_to "Back to contacts", contacts_path, class: "btn btn-sm btn-outline-dark" %>
  <%= button_to "Destroy this contact", @contact, method: :delete, class: "btn btn-sm btn-outline-dark" %>
</div>
