<p style="color: green"><%= notice %></p>

<%= render @conversation %>

<div class="btn-group my-5">
  <%= link_to "Edit this conversation", edit_conversation_path(@conversation), class: "btn btn-sm btn-outline-dark" %>
  <%= link_to "Back to conversations", conversations_path, class: "btn btn-sm btn-outline-dark" %>
  <%= button_to "Destroy this conversation", @conversation, method: :delete, class: "btn btn-sm btn-outline-dark" %>
</div>

<hr class="my-5">

<%= turbo_stream_from @conversation %>
<div id="posts">
  <%= render @posts %>
</div>
